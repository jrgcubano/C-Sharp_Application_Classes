<Window x:Class="WPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Application" Height="221" Width="400">
    
    <StackPanel VerticalAlignment="Center" Margin="20">
        <Button Margin="20" Click="ThrowException_Click">Throw unhandled exception</Button>
        <Button Margin="20" Click="UseMissingDLL_Click">Call funtion from missing DLL</Button>
        <CheckBox Name="ignore">Ignore exceptions</CheckBox>
    </StackPanel>
</Window>
